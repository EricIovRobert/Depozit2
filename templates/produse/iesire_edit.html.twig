{% extends 'base.html.twig' %}

{% block title %}Edit Iesire{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% if iesire.produs.available %}
            <h1 class="text-center mb-4">Editează Ieșirea pentru {{ iesire.produs.nume }}</h1>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.data, 'Data', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.data, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.nr_doc_iesire, 'Numar Document Iesire', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nr_doc_iesire, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-4">
                            {{ form_label(form.iesiri, 'Iesiri', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.iesiri, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary mx-2">Actualizează</button>
                            <a href="{{ path('app_product_out', {id: iesire.produs.id}) }}" class="btn btn-secondary mx-2">Înapoi la Ieșiri</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning text-center">
                <h3>Acest produs nu este disponibil pentru editarea ieșirilor.</h3>
                <a href="{{ path('app_produse') }}" class="btn btn-secondary mt-3">Înapoi la Produse</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
