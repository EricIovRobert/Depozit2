{% extends 'base.html.twig' %}

{% block title %}Add New Iesire{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% if produs.available %}
            <h1 class="text-center mb-4">Adaugă o nouă Ieșire pentru {{ produs.nume }}</h1>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger text-center">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="row justify-content-center">
                <div class="col-md-6">
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.data, 'Data', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.data, {'attr': {'class': 'form-control', 'id': 'data'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.nr_doc_iesire, 'Numar Document Iesire', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nr_doc_iesire, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-4">
                            {{ form_label(form.iesiri, 'Iesiri', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.iesiri, {'attr': {'class': 'form-control', 'min': 0}}) }}
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-success mx-2">Salvează</button>
                            <a href="{{ path('app_product_out', {id: produs.id}) }}" class="btn btn-secondary mx-2">Înapoi la Ieșiri</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning text-center">
                <h3>Acest produs nu este disponibil pentru ieșiri.</h3>
                <a href="{{ path('app_produse') }}" class="btn btn-secondary mt-3">Înapoi la Produse</a>
            </div>
        {% endif %}
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const dateInput = document.getElementById('data');

                // Function to format the date as dd/mm/yyyy
                function formatDate(date) {
                    const d = new Date(date);
                    const day = String(d.getDate()).padStart(2, '0');
                    const month = String(d.getMonth() + 1).padStart(2, '0');
                    const year = d.getFullYear();
                    return `${day}/${month}/${year}`;
                }

                // Function to unformat the date from dd/mm/yyyy to yyyy-mm-dd
                function unformatDate(dateStr) {
                    const [day, month, year] = dateStr.split('/');
                    return `${year}-${month}-${day}`;
                }

                // On load, format the date for display
                if (dateInput.value) {
                    dateInput.value = formatDate(dateInput.value);
                }

                // On form submit, reformat the date to the original format for submission
                dateInput.form.addEventListener('submit', function() {
                    if (dateInput.value) {
                        dateInput.value = unformatDate(dateInput.value);
                    }
                });
            });
        </script>
    {% endblock %}
{% endblock %}
