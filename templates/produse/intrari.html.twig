{% extends 'base.html.twig' %}

{% block title %}Intrari for {{ produs.nume }}{% endblock %}

{% block body %}
    <h1>Intrari for {{ produs.nume }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Document Number</th>
                <th>Entries</th>
                <th>Non-usable</th>
                <th>Stock After Entry</th>
                {% if produs.available %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for intrare in pagination.items %}
                <tr>
                    <td>{{ intrare.id }}</td>
                    <td>{{ intrare.data|date('Y-m-d') }}</td>
                    <td>{{ intrare.nrDocIntrare }}</td>
                    <td>{{ intrare.intrari }}</td>
                    <td>{{ intrare.nefolosibile }}</td>
                    <td>{{ intrare.stocIntrare }}</td>
                    {% if produs.available %}
                        <td>
                            <a href="{{ path('app_edit_intrare', {id: intrare.id}) }}" class="btn btn-primary">Edit</a>
                            <form action="{{ path('app_delete_intrare', {id: intrare.id}) }}" method="post" style="display:inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ intrare.id) }}">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No entries found for this product.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>

    {% if produs.available %}
        <a href="{{ path('app_add_intrare', {id: produs.id}) }}" class="btn btn-success">Add New Intrare</a>
    {% endif %}
    <a href="{{ path('app_produse') }}" class="btn btn-secondary">Back to Products</a>
{% endblock %}
