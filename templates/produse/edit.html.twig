{% extends 'base.html.twig' %}

{% block title %}Editează Produs{% endblock %}

{% block body %}
<div class="container mt-5">
    {% if produs.available %}
        <h1 class="text-center mb-4">Editează Produsul: {{ produs.nume }}</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}
                    <div class="form-group mb-3">
                        {{ form_label(form.nume, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nume, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group mb-4">
                        {{ form_label(form.stoc, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.stoc, {'attr': {'class': 'form-control', 'min': 0}}) }}
                    </div>
                    <div class="form-group mb-4">
                        {{ form_label(form.total, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.total, {'attr': {'class': 'form-control', 'min': 0}}) }}
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary mx-2">Salvează</button>
                        <a href="{{ path('app_produse') }}" class="btn btn-secondary mx-2">Anulează</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning text-center">
            <h3>Acest produs nu este disponibil.</h3>
            <a href="{{ path('app_produse') }}" class="btn btn-secondary">Înapoi la Produse</a>
        </div>
    {% endif %}
</div>
{% endblock %}
