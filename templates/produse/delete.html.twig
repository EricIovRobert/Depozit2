{% extends 'base.html.twig' %}

{% block title %}Șterge Produs{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center text-danger">Șterge Produsul</h1>
    <p class="text-center">Ești sigur că vrei să ștergi produsul: <strong>{{ produs.nume }}</strong>?</p>

    <form method="post" action="{{ path('app_delete_product', {'id': produs.id}) }}">
        <div class="text-center">
            <button type="submit" class="btn btn-danger">Confirmă</button>
            <a href="{{ path('app_produse') }}" class="btn btn-secondary">Anulează</a>
        </div>
    </form>
</div>
{% endblock %}
